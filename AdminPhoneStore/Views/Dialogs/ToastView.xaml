<UserControl x:Class="AdminPhoneStore.Views.Dialogs.ToastView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="Transparent">
    <Border Background="White"
            CornerRadius="8"
            Padding="16,12"
            MinWidth="300"
            MaxWidth="400"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" 
                            ShadowDepth="3" 
                            Color="#40000000" 
                            Opacity="0.4"/>
        </Border.Effect>
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding ToastType}" Value="Success">
                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                        <Setter Property="BorderThickness" Value="0,0,0,4"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ToastType}" Value="Error">
                        <Setter Property="BorderBrush" Value="#F44336"/>
                        <Setter Property="BorderThickness" Value="0,0,0,4"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ToastType}" Value="Warning">
                        <Setter Property="BorderBrush" Value="#FF9800"/>
                        <Setter Property="BorderThickness" Value="0,0,0,4"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding ToastType}" Value="Info">
                        <Setter Property="BorderBrush" Value="#685AFF"/>
                        <Setter Property="BorderThickness" Value="0,0,0,4"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Icon -->
            <TextBlock Grid.Column="0"
                     Text="{Binding Icon}"
                     FontSize="24"
                     Foreground="{Binding IconColor}"
                     VerticalAlignment="Center"
                     Margin="0,0,12,0"
                     FontFamily="Segoe UI Symbol"/>

            <!-- Message -->
            <TextBlock Grid.Column="1"
                     Text="{Binding Message}"
                     FontSize="14"
                     Foreground="#333333"
                     TextWrapping="Wrap"
                     VerticalAlignment="Center"/>

            <!-- Close Button -->
            <Button Grid.Column="2"
                  Content="âœ•"
                  FontSize="16"
                  Foreground="#999999"
                  Background="Transparent"
                  BorderThickness="0"
                  Padding="4"
                  Cursor="Hand"
                  Click="CloseButton_Click"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Right"
                  Margin="8,-8,-8,-8">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#333333"/>
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>

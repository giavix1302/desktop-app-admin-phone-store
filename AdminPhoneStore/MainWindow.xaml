<Window x:Class="AdminPhoneStore.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="clr-namespace:AdminPhoneStore.Helpers"
    mc:Ignorable="d"
    Title="Admin Phone Store"
    WindowStyle="None"
    ResizeMode="CanResize"
    WindowState="Maximized"
    WindowStartupLocation="CenterScreen"
    Background="#F5F7FA">
    <Window.Resources>
        <!-- Menu Button Style with Active State -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="20,14" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}"
                            Margin="12,4,12,4">
                            <ContentPresenter HorizontalAlignment="Left"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Active State for Dashboard -->
                <DataTrigger Binding="{Binding ActiveMenu}" Value="Dashboard">
                    <Setter Property="Background" Value="#685AFF" />
                </DataTrigger>
                <!-- Active State for Product -->
                <DataTrigger Binding="{Binding ActiveMenu}" Value="Product">
                    <Setter Property="Background" Value="#685AFF" />
                </DataTrigger>
                <!-- Hover State -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#334155" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR with Gradient -->
        <Border Grid.Column="0"
            BorderBrush="#334155"
            BorderThickness="0,0,1,0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E293B" Offset="0" />
                    <GradientStop Color="#0F172A" Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Logo Section -->
                <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="20,24,20,32"
                    VerticalAlignment="Center">
                    <Border Background="#685AFF"
                        Width="40" Height="40"
                        CornerRadius="10"
                        Margin="0,0,12,0">
                        <TextBlock Text="📱"
                            FontSize="24"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Admin Phone Store"
                            FontSize="18"
                            FontWeight="Bold"
                            Foreground="White" />
                        <TextBlock Text="Management System"
                            FontSize="11"
                            Foreground="#94A3B8"
                            Margin="0,2,0,0" />
                    </StackPanel>
                </StackPanel>

                <!-- Navigation Menu -->
                <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    Margin="0,0,0,20">
                    <StackPanel>
                        <!-- Dashboard -->
                        <Button Command="{Binding ShowDashboardCommand}"
                            Style="{StaticResource MenuButtonStyle}"
                            Tag="Dashboard">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="18" Margin="0,0,12,0" />
                                <TextBlock Text="Dashboard" FontSize="14" Foreground="White" />
                            </StackPanel>
                        </Button>

                        <!-- Products -->
                        <Button Command="{Binding ShowProductCommand}"
                            Style="{StaticResource MenuButtonStyle}"
                            Tag="Product">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="18" Margin="0,0,12,0" />
                                <TextBlock Text="Products" FontSize="14" Foreground="White" />
                            </StackPanel>
                        </Button>

                        <!-- Orders -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                            Tag="Orders">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🛒" FontSize="18" Margin="0,0,12,0" />
                                <TextBlock Text="Orders" FontSize="14" Foreground="White" />
                            </StackPanel>
                        </Button>

                        <!-- Customers -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                            Tag="Customers">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="👥" FontSize="18" Margin="0,0,12,0" />
                                <TextBlock Text="Customers" FontSize="14" Foreground="White" />
                            </StackPanel>
                        </Button>

                        <!-- Settings -->
                        <Button Style="{StaticResource MenuButtonStyle}"
                            Tag="Settings">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚙️" FontSize="18" Margin="0,0,12,0" />
                                <TextBlock Text="Settings" FontSize="14" Foreground="White" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- User Profile Card -->
                <Border Grid.Row="2"
                    Background="#0F172A"
                    CornerRadius="12"
                    Padding="16"
                    Margin="16,0,16,20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8"
                            ShadowDepth="2"
                            Color="#40000000"
                            Opacity="0.3" />
                    </Border.Effect>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Ellipse Width="40" Height="40"
                                Fill="#685AFF"
                                Margin="0,0,12,0">
                                <Ellipse.Effect>
                                    <DropShadowEffect BlurRadius="4"
                                        ShadowDepth="2"
                                        Color="#40000000"
                                        Opacity="0.2" />
                                </Ellipse.Effect>
                            </Ellipse>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="{Binding UserName}"
                                    FontSize="14"
                                    FontWeight="SemiBold"
                                    Foreground="White" />
                                <TextBlock Text="{Binding UserEmail}"
                                    FontSize="11"
                                    Foreground="#94A3B8"
                                    Margin="0,2,0,0" />
                            </StackPanel>
                        </StackPanel>
                        <Button Content="Logout"
                            Command="{Binding LogoutCommand}"
                            Background="#EF4444"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,8"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Margin="0,8,0,0">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#DC2626" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- RIGHT CONTENT AREA -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- TOP HEADER -->
            <Border Grid.Row="0"
                Background="White"
                BorderBrush="#E2E8F0"
                BorderThickness="0,0,0,1"
                Padding="24,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Search Input -->
                    <Border Grid.Column="0"
                        Background="#F1F5F9"
                        CornerRadius="8"
                        Padding="16,12"
                        MaxWidth="400"
                        VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔍" FontSize="16" Margin="0,0,12,0" Opacity="0.5" />
                            <TextBox Text="Search..."
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="14"
                                Foreground="#64748B"
                                VerticalAlignment="Center">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="Foreground" Value="#1E293B" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </StackPanel>
                    </Border>

                    <!-- Right Actions -->
                    <StackPanel Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                        <!-- Language Selector -->
                        <ComboBox Width="100"
                            Height="36"
                            Margin="0,0,12,0"
                            Background="#F1F5F9"
                            BorderBrush="#E2E8F0"
                            BorderThickness="1"
                            Padding="12,8"
                            VerticalContentAlignment="Center">
                            <ComboBoxItem Content="🇻🇳 Tiếng Việt" IsSelected="True" />
                            <ComboBoxItem Content="🇺🇸 English" />
                        </ComboBox>

                        <!-- Theme Toggle -->
                        <Button Width="36" Height="36"
                            Background="#F1F5F9"
                            BorderThickness="0"
                            Margin="0,0,12,0"
                            Cursor="Hand">
                            <TextBlock Text="🌙" FontSize="18" />
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E2E8F0" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Notifications -->
                        <Button Width="36" Height="36"
                            Background="#F1F5F9"
                            BorderThickness="0"
                            Margin="0,0,12,0"
                            Cursor="Hand">
                            <Grid>
                                <TextBlock Text="🔔" FontSize="18" />
                                <Ellipse Width="8" Height="8"
                                    Fill="#EF4444"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Margin="0,-2,-2,0" />
                            </Grid>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                        VerticalAlignment="Center" />
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E2E8F0" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- User Avatar -->
                        <Ellipse Width="36" Height="36"
                            Fill="#685AFF"
                            Cursor="Hand">
                            <Ellipse.Effect>
                                <DropShadowEffect BlurRadius="4"
                                    ShadowDepth="2"
                                    Color="#40000000"
                                    Opacity="0.2" />
                            </Ellipse.Effect>
                        </Ellipse>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- MAIN CONTENT -->
            <ScrollViewer Grid.Row="1"
                VerticalScrollBarVisibility="Auto"
                Padding="24">
                <StackPanel>
                    <!-- Page Title -->
                    <TextBlock Text="Dashboard"
                        FontSize="28"
                        FontWeight="Bold"
                        Foreground="#1E293B"
                        Margin="0,0,0,24" />

                    <!-- Content Area -->
                    <ContentControl Content="{Binding CurrentView}" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>